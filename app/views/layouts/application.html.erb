<!DOCTYPE html>
<html>
  <head>
    <title>BeautyRc</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="container-fluid navbar navbar-inverse">

        <nav class="nav navbar-nav navbar-center">
          <h2 style="color:white;">美カルテ</h2>
        </nav>

        <nav>

          <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">

                <% if user_signed_in? %>

                  <li class="">
                  </li>

                  <li class="">
                  <%= link_to 'TOP', mypage_path(current_user.id), class:'glyphicon glyphicon-home' %>
                  </li>




                  <li class="">
                    <%= link_to "logout", destroy_user_session_path, method: :delete, class:'glyphicon glyphicon-log-out' %>
                  </li>

                <% else %>

                  <li class="">
                    <%= link_to "Home", root_path, class:'glyphicon glyphicon-home'%>
                  </li>

                  <li class="">
                    <%= link_to "sign up", new_user_registration_path, class:'glyphicon glyphicon-edit sign_up' %>
                  </li>
                  <li class="">
                    <%= link_to "login", new_user_session_path, class:'glyphicon glyphicon-log-in sign_in' %>
                  </li>
                <% end %>
                </li>
            </ul>
            </nav>
          </div>

      <% if flash[:notice] %>
      　 <p><%= flash[:notice] %></p>
      　<% end %>
        <div id="main">
          <%= yield %>
        </div>
        <footer class="clearfix">
          <p class="pull-right">CopyRight Kyoto</p>
        </footer>

          </div>
      </body>
    </html>
